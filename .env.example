# ============================================================================
# AUTOPOST BOT - ENVIRONMENT VARIABLES
# Copy this file to .env and fill with your actual values
# ============================================================================

# ============================================================================
# BOT SETTINGS
# ============================================================================
BOT_TIMEZONE=Asia/Novosibirsk
BOT_STORAGE_FILE=posts.json
BOT_DEBUG=False
BOT_LOG_LEVEL=INFO

# ============================================================================
# TELEGRAM INTEGRATION
# ============================================================================
TELEGRAM_ENABLED=False
TELEGRAM_TOKEN=
TELEGRAM_CHAT_IDS=

# Get TELEGRAM_TOKEN from @BotFather
# Get TELEGRAM_CHAT_IDS from @userinfobot (comma-separated: 123456,789012)

# ============================================================================
# VK (VKONTAKTE) INTEGRATION
# ============================================================================
VK_ENABLED=False
VK_ACCESS_TOKEN=
VK_GROUP_ID=

# Get tokens from https://vk.com/dev

# ============================================================================
# INSTAGRAM INTEGRATION
# ============================================================================
INSTAGRAM_ENABLED=False
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# Warning: Better to use app-specific password or OAuth token

# ============================================================================
# TWITTER API INTEGRATION
# ============================================================================
TWITTER_ENABLED=False
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# Get from https://developer.twitter.com

# ============================================================================
# REDDIT INTEGRATION
# ============================================================================
REDDIT_ENABLED=False
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_SUBREDDIT=

# Get from https://www.reddit.com/prefs/apps

# ============================================================================
# WORDPRESS INTEGRATION
# ============================================================================
WORDPRESS_ENABLED=False
WORDPRESS_URL=
WORDPRESS_USERNAME=
WORDPRESS_PASSWORD=

# Example: https://example.com

# ============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# Use for production instead of JSON storage
# ============================================================================
DATABASE_ENABLED=False
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=autopost_db
DATABASE_USER=postgres
DATABASE_PASSWORD=
DATABASE_URL=

# Example PostgreSQL URL: postgresql://user:password@localhost:5432/autopost_db
# Example MongoDB URL: mongodb://user:password@localhost:27017/autopost_db

# ============================================================================
# SCHEDULE SETTINGS
# ============================================================================
# Enable automatic post deletion (in background)
AUTO_DELETE_ENABLED=True

# Timezone for all scheduled operations
SCHEDULE_TIMEZONE=Asia/Novosibirsk

# ============================================================================
# LOGGING
# ============================================================================
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=autopost_bot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# NOTIFICATIONS
# ============================================================================
# Send notifications when posts are published/deleted
NOTIFY_ON_PUBLISH=True
NOTIFY_ON_DELETE=False
NOTIFY_ON_ERROR=True

# ============================================================================
# PERFORMANCE
# ============================================================================
# Maximum number of concurrent scheduled jobs
MAX_CONCURRENT_JOBS=10

# Maximum posts to load at startup
MAX_POSTS_LOAD=1000

# ============================================================================
# SECURITY
# ============================================================================
# API key for HTTP API (if enabled)
API_KEY=

# Enable CORS for web API
CORS_ENABLED=False
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
